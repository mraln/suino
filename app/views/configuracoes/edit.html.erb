<div class="page-header">
  <h1>Configurações</h1>
</div>

<%= form_tag do %>
  
  <% @configuracoes.each do |field, value| %>
    <div class="control-group">
      <%= label_tag field, nil, :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag field, value, :class => 'date_field' %>
      </div>
    </div>
  <% end %>
  <div class="form
  -actions">
    <%= submit_tag 'Salvar', :class => 'btn btn-primary' %>
  </div>
<% end %>
