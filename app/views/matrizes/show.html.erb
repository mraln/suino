<%- model_class = Matriz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= render 'show_details', model_class: model_class %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              matrizes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.linknds.edit")),
              edit_matriz_path(@matriz), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              matriz_path(@matriz),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<div class="page-header">
  <h4>Seus partos</h4>
</div>
<% if @matriz.partos.count == 0 %>
  <p>
    Nenhum parto para esta matriz
  </p>

<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:reprodutor_id) %></th>
        <th><%= model_class.human_attribute_name(:cobertura) %></th>
        <th><%= model_class.human_attribute_name(:previsao_parto) %></th>
        <th><%= model_class.human_attribute_name(:data_parto) %></th>
        <th><%= model_class.human_attribute_name(:qtde_filhos) %></th>
        <th><%= model_class.human_attribute_name(:mortalidade) %></th>
        <th><%= model_class.human_attribute_name(:total_desmamado) %></th>
        <th><%= model_class.human_attribute_name(:data_desmame) %></th>
        <th><%= model_class.human_attribute_name(:retorno_cio) %></th>
      </tr>
    </thead>
    <tbody>
      <% @matriz.partos.each do |parto| %>
        <tr>
          <td><%= parto.reprodutor.nome %></td>
          <td><%= l(parto.cobertura) %></td>
          <td><%= l(parto.previsao_parto) %></td>
          <td><%= l(parto.data_parto) %></td>
          <td><%= parto.qtde_filhos %></td>
          <td><%= parto.mortalidade %></td>
          <td><%= parto.total_desmamado %></td>
          <td><%= l(parto.data_desmame) %></td>
          <td><%= l(parto.retorno_cio) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
