<%- model_class = Matriz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:numid) %>:</strong></dt>
  <dd><%= @matriz.numid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:raca) %>:</strong></dt>
  <dd><%= @matriz.raca %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              matrizes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_matriz_path(@matriz), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              matriz_path(@matriz),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<h4>Partos</h4>
<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Parto.human_attribute_name(:reprodutor) %></th>
      <th><%= Parto.human_attribute_name(:cobertura) %></th>
      <th><%= Parto.human_attribute_name(:previsao_parto) %></th>
      <th><%= Parto.human_attribute_name(:data_parto) %></th>
      <th><%= Parto.human_attribute_name(:qtde_filhos) %></th>
      <th><%= Parto.human_attribute_name(:mortalidade) %></th>
      <th><%= Parto.human_attribute_name(:total_desmamado) %></th>
      <th><%= Parto.human_attribute_name(:data_desmame) %></th>
      <th><%= Parto.human_attribute_name(:retorno_cio) %></th>
    </tr>
  </thead>
  <tbody>
    <% @matriz.partos.each do |parto| %>
      <tr>
        <td><%= parto.reprodutor.name %></td>
        <td><%= parto.cobertura %></td>
        <td><%= parto.previsao_parto %></td>
        <td><%= parto.data_parto %></td>
        <td><%= parto.qtde_filhos %></td>
        <td><%= parto.mortalidade %></td>
        <td><%= parto.total_desmamado %></td>
        <td><%= parto.data_desmame %></td>
        <td><%= parto.retorno_cio %></td>
      </tr>
    <% end %>
  </tbody>
</table>