<%- model_class = Matriz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:numid) %>:</strong></dt>
  <dd><%= @matriz.numid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:raca) %>:</strong></dt>
  <dd><%= @matriz.raca %></dd>
</dl>



<%- model_class = Parto -%>
<div class="page-header">
  <h4><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h4>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:reprodutor_id) %></th>
      <th><%= model_class.human_attribute_name(:cobertura) %></th>
      <th><%= model_class.human_attribute_name(:previsao_parto) %></th>
      <th><%= model_class.human_attribute_name(:data_parto) %></th>
      <th><%= model_class.human_attribute_name(:qtde_filhos) %></th>
      <th><%= model_class.human_attribute_name(:mortalidade) %></th>
      <th><%= model_class.human_attribute_name(:total_desmamado) %></th>
      <th><%= model_class.human_attribute_name(:data_desmame) %></th>
      <th><%= model_class.human_attribute_name(:retorno_cio) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @partos.each do |parto| %>
      <tr>
        <td><%= link_to parto.id, matriz_parto_path(@matriz, parto) %></td>
        <td><%= parto.reprodutor.nome %></td>
        <td><%= show_field_date(parto.cobertura) %></td>
        <td><%= show_field_date(parto.previsao_parto) %></td>
        <td><%= show_field_date(parto.data_parto) %></td>
        <td><%= parto.qtde_filhos %></td>
        <td><%= parto.mortalidade %></td>
        <td><%= show_field_date(parto.total_desmamado) %></td>
        <td><%= show_field_date(parto.data_desmame) %></td>
        <td><%= show_field_date(parto.retorno_cio) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_matriz_parto_path(@matriz, parto), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      matriz_parto_path(@matriz, parto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_matriz_parto_path(@matriz),
            :class => 'btn btn-primary' %>
<%= link_to 'Voltar', matrizes_path, :class => 'btn' %>