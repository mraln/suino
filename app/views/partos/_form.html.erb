<%-
  options = { :html => { :class => 'form-horizontal' } }
  if @parto.new_record?
    options.merge!(:url => matriz_partos_path(@matriz))
  else
    options.merge!(:url => matriz_parto_path(@matriz, @parto))
  end
-%>

<%= form_for @parto, options do |f| %>
  <% if @parto.new_record? %>
    <div class="control-group">
      <%= f.label :reprodutor_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :reprodutor_id, options_from_collection_for_select(Reprodutor.all, :id, :nome), :class => 'select_field'  %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :cobertura, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_field :cobertura, :class => 'date_field' %>
      </div>
    </div>
  <% else %>
    <div class="control-group">
      <%= f.label :data_parto, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_field :data_parto, :class => 'date_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :qtde_filhos, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :qtde_filhos, :class => 'number_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :mortalidade, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :mortalidade, :class => 'number_field' %>
      </div>
    </div>
  <% end %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                matriz_partos_path(@matriz), :class => 'btn' %>
  </div>
<% end %>
